{
  "markdown": {
    "line_length": 120,
    "trailing_spaces": true,
    "header_blank_lines": true,
    "code_block_language": true,
    "list_indentation": 2,
    "strong_style": "consistent"
  },
  "validation": {
    "required_fields": [
      "title",
      "tags",
      "updated"
    ],
    "max_title_length": 100,
    "min_tags_count": 1,
    "max_tags_count": 10,
    "allowed_tags": null,
    "forbidden_tags": null,
    "check_internal_links": true,
    "check_external_links": false
  },
  "generation": {
    "search_index_output": "assets/search-index.json",
    "tags_index_output": "tags.md",
    "changelog_output": "changelog.md",
    "validation_report_output": "docs/VALIDATION_REPORT.md",
    "include_drafts": false,
    "sort_by": "title"
  },
  "paths": {
    "entries_dir": "entries",
    "assets_dir": "assets",
    "docs_dir": "docs",
    "output_dir": "dist",
    "template_dir": "templates",
    "ignore_patterns": [
      "node_modules",
      ".git",
      "__pycache__",
      "*.pyc",
      ".DS_Store"
    ]
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file_path": null,
    "max_file_size": 10485760,
    "backup_count": 5
  }
}